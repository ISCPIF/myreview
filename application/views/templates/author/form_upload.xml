
<form action="{base_url}/author/upload" enctype='multipart/form-data' method="post" name="form_upload">

	<input type='hidden' name="id_paper" value="{Paper->id}"/>

		<table border='1' width="100%">
			<tr class='header'>
				<th colspan='2'></th>
			</tr>
			<tr class='odd'>
				<td>
					<b>{author.upload_file} -- {Paper->title}</b>
				</td>
				<td>
					<input type='file' name="paper" size='55' maxlength='255'/>
				</td>
			</tr>
			</table>
		
			<input type='submit' name="submit" value="{form.upload}"/>
</form>
