
<form  method='post' 
      action='{base_url}/index/changepassword' name='form_pasword'>
      
 <input type='hidden' name="form_password" value="form_password"/>
 
<table cellpadding="3" cellspacing="3">

<tr class="header">
  <td colspan='2'>{form.user_form}</td>
  </tr>

<tr class='even'><td><b>{form.password}*</b></td>
<td><input type='password' name="password" value="" size='30' maxlength='30'/>
</td>
</tr>
<tr class='odd'><td><b>{form.confirm_password}*</b></td>
<td><input type='password' name="confirm_password" value="" size='30' maxlength='30'/>
</td>
</tr>

</table>
<input type='submit' name="insert" value="{form.submit}"/>
</form>